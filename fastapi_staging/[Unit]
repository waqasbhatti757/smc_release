[Unit]
Description=FastAPI app with Gunicorn
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/root/smc_fastapi/src
ExecStart=/root/smc_fastapi/env/bin/gunicorn -k uvicorn.workers.UvicornWorker src.main:app --workers 4 --bind 0.0.0.0:8002

Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target

